mixin video(video)
     div
            h4
                a(href=`/videos/${video.id}`)=video.title
            ul
                li #{video.rating}/5
                li #{video.comments} #{video.views ===1?"comment":"comments"}.
                li Posted #{video.createdAt}.
                li #{video.views} #{video.views ===1?"view":"views"}.
                iframe(width="560" height="315" src=`${video.src}` title="YouTube video player" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share" allowfullscreen="")